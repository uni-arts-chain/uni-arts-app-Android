<?xml version="1.0" encoding="utf-8"?>
<merge android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    tools:padding="16dp"
    tools:parentTag="android.widget.LinearLayout"
    tools:background="@drawable/bg_input_shape_selector"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    
    <ImageView
        android:id="@+id/elementChooserIcon"
        tools:src="@drawable/ic_ksm_24"
        android:layout_width="24dp"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/elementChooserText"
        style="@style/TextAppearance.Soramitsu.Body1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        tools:text="Kusama" />

    <ImageView
        android:id="@+id/elementChooserDropdown"
        android:src="@drawable/ic_pin_white_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</merge>