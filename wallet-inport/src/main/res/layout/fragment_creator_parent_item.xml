<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10">

    <com.yunhualian.widget.CircleImageView
        android:id="@+id/picture"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_39"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_default_head" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/picture"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/picture"
        android:text="name"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/picture"
        android:text="简介、简介"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/arts_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_toLeftOf="@+id/artist_amount"
        android:text="@string/artist"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/artist_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignParentRight="true"
        android:text="12"
        android:textColor="@color/picture_name_color"
        android:textSize="@dimen/sp_13" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/picture_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture"
        android:layout_marginTop="@dimen/dp_15" />
</RelativeLayout>