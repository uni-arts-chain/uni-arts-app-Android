<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="match_parent"
    android:layout_marginRight="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/picture_layout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/shanshui"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/picture_prize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture_layout"
        android:layout_alignParentLeft="true"
        android:paddingTop="5dp"
        android:text="向日葵"
        android:textColor="@color/picture_name_color"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/picture_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture_prize"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dp_10"
        android:text="油画"
        android:textColor="@color/picture_name_color"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/certify_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture_type"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="证书地址:908bberjfag09vjaljfjslksj"
        android:textColor="@color/picture_profile"
        android:textSize="13sp" />

</RelativeLayout>