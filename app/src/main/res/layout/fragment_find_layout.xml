<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="发现"
            android:textColor="@color/_101010"
            android:textSize="17sp" />

<!--        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent">-->

<!--            <androidx.core.widget.NestedScrollView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:fillViewport="true">-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/ll_search_app"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/shape_btn_bgcolor"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_go_search"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_weight="5"
                            android:background="@null"
                            android:drawableLeft="@mipmap/icon_search"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/dapp_edit_hint"
                            android:textColor="#AAAAAA"
                            android:textSize="13sp" />

                        <RelativeLayout
                            android:id="@+id/rl_saoma"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/icon_saoma" />

                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_recent_apps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_search_app">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tab_recent_apps"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            app:tabIndicatorColor="@color/_101010"
                            app:tabIndicatorFullWidth="false"
                            app:tabMinWidth="80dp"
                            app:tabSelectedTextColor="@color/_101010"
                            app:tabTextColor="@color/_101010" />

                        <TextView
                            android:id="@+id/tv_all_app"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="17dp"
                            android:gravity="center_vertical"
                            android:text="全部"
                            android:textColor="@color/_999999"
                            android:textSize="13sp" />

                        <com.gammaray.widget.NoScrollViewPager
                            android:id="@+id/vp_view_apps"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_below="@id/tab_recent_apps"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/vp_view_apps"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@color/gray_line" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/rl_recent_apps">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tab_dpps"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            app:tabIndicatorColor="@color/_101010"
                            app:tabIndicatorFullWidth="false"
                            app:tabMinWidth="80dp"
                            app:tabSelectedTextColor="@color/_101010"
                            app:tabTextColor="@color/_101010" />

                        <com.gammaray.widget.NoScrollViewPager
                            android:id="@+id/vp_all_apps"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/tab_dpps"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                    </RelativeLayout>

                </RelativeLayout>

<!--            </androidx.core.widget.NestedScrollView>-->

<!--        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->

    </LinearLayout>
</layout>