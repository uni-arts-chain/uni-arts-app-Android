<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@mipmap/shanshui"
        android:padding="@dimen/dp_10"
        android:scaleType="center" />

    <TextView
        android:id="@+id/picture_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toRightOf="@+id/picture"
        android:paddingTop="5dp"
        android:text="向日葵"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/picture_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture_name"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toRightOf="@+id/picture"
        android:paddingTop="5dp"
        android:text="油画"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/picture_prize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture_type"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toRightOf="@+id/picture"
        android:paddingTop="5dp"
        android:text="¥8000"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="下架"
        android:textColor="@color/liji_c_blue"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="申请加签"
        android:textColor="@color/liji_c_blue"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>