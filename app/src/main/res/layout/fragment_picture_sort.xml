<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <!--        <include-->
        <!--            android:id="@+id/title_layout"-->
        <!--            layout="@layout/layout_toolbar_home" />-->
        <RelativeLayout
            android:id="@+id/centerToolbarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toLeftOf="@+id/layout_menu"
            android:layout_toRightOf="@+id/layout_back"
            android:background="@drawable/shape_btn_bgcolor"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_edt"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:paddingLeft="10dp"
                android:background="@null"
                android:drawableLeft="@mipmap/icon_search"
                android:drawablePadding="6dp"
                android:editable="false"
                android:gravity="center_vertical"
                android:hint="@string/edit_hint"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:textSize="13sp" />

        </RelativeLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srl_shooping_mall"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/sort_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_10"
                            android:text="@string/thpe_theme"
                            android:textColor="@color/picture_name_color"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="@dimen/dp_10"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/sort_title"
                            android:background="@color/_666666" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/sort_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/sort_title"
                            android:orientation="horizontal" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/type_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_10"
                            android:text="@string/type"
                            android:textColor="@color/picture_name_color"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="@dimen/dp_10"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/type_title"
                            android:background="@color/_666666" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/type_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/type_title"
                            android:orientation="horizontal" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/prize_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_10"
                            android:text="@string/prize"
                            android:textColor="@color/picture_name_color"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="@dimen/dp_10"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/prize_title"
                            android:background="@color/_666666" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/prize_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/prize_title"
                            android:orientation="horizontal" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/new_goods_sort"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/dp_10"
                            android:text="@string/new_goods" />

                        <TextView
                            android:id="@+id/prize_sort"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/dp_10"
                            android:text="@string/new_goods" />
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/pictures"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>
</layout>