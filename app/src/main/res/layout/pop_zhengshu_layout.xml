<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_zhengshu"
        android:layout_width="295dp"
        android:layout_height="371dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/zhengshu_border">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="47dp"
            android:background="@mipmap/zhengshu_zuohua" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="47dp"
            android:layout_marginRight="53dp"
            android:background="@mipmap/zhengshu_youhua" />

        <ImageView
            android:id="@+id/title"
            android:layout_width="115dp"
            android:layout_height="33dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="69dp"
            android:background="@mipmap/zhengshu_title" />

        <TextView
            android:id="@+id/tv_nft_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:maxLines="1"
            android:ellipsize="middle"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#010034"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_nft_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nft_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#010034"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_nft_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nft_theme"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#010034"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nft_count"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_nft_address_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数字藏品地址："
                android:textColor="#010034"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_nft_address"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_nft_address_key"
                android:textColor="#010034"
                android:textSize="12sp" />
        </RelativeLayout>


        <ImageView
            android:layout_width="184dp"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="73dp"
            android:background="@mipmap/zhengshu_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/layout_zhengshu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/zhengshu_close" />
    </RelativeLayout>

</RelativeLayout>