<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/mAppBarLayout_av"
            layout="@layout/layout_generic_toolbar" />

        <com.dd.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:sl_cornerRadius="3dp"
            app:sl_dx="0dp"
            app:sl_dy="0dp"
            app:sl_shadowColor="#20000000"
            app:sl_shadowRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/shape_default_white_without_stroke">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:text="作品信息"
                    android:textColor="@color/_212121"
                    android:textSize="17sp" />

                <LinearLayout
                    android:id="@+id/artLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/picture_layout"
                        android:layout_width="102dp"
                        android:layout_height="76dp"
                        app:cardCornerRadius="@dimen/dp_5">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/hot_picture"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="name"
                            android:textColor="@color/_212121"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/art_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="name"
                            android:textColor="@color/_212121"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/addr"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="bottom"
                            android:singleLine="true"
                            android:text="@string/nft_address"
                            android:textColor="@color/_101010"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/buyAmountLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/artLayout"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_buy_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buy_amount"
                        android:textColor="@color/_333333"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/last_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_buy_amount"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/tv_buy_amount"
                        android:textColor="@color/_333333"
                        android:textSize="@dimen/sp_12" />

                    <RelativeLayout
                        android:id="@+id/amountLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/dp_10">

                        <TextView
                            android:id="@+id/t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_15"
                            android:text="T"
                            android:textColor="@color/_333333"
                            android:textSize="@dimen/sp_13"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:id="@+id/add"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@drawable/bg_market_block_unselected">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="+"
                                android:textColor="@color/_333333"
                                android:textSize="@dimen/sp_13" />
                        </RelativeLayout>


                        <EditText
                            android:id="@+id/input_amount"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/add"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLines="1"
                            android:text="1"
                            android:textColor="@color/_333333"
                            android:textSize="@dimen/sp_13" />

                        <RelativeLayout
                            android:id="@+id/cut"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/input_amount"
                            android:background="@drawable/bg_market_block_unselected">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="-"
                                android:textColor="@color/_333333"
                                android:textSize="@dimen/sp_13" />
                        </RelativeLayout>


                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/priceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buyAmountLayout"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/art_price"
                        android:textColor="@color/_333333"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="@string/text_buy_amount"
                        android:textColor="@color/deep_red"
                        android:textSize="@dimen/sp_15" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/priceLayout"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_15">

                    <TextView
                        android:id="@+id/rotayTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/royalty"
                        android:textColor="@color/_333333"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/rotayRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/rotayTv"
                        android:layout_toRightOf="@+id/rotayTv"
                        android:text="@string/royalty_rate_value"
                        android:textColor="@color/_333333"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/rotayPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="@string/text_buy_amount"
                        android:textColor="@color/deep_red"
                        android:textSize="@dimen/sp_15" />
                </RelativeLayout>
            </RelativeLayout>

        </com.dd.ShadowLayout>

        <com.dd.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:sl_cornerRadius="3dp"
            app:sl_dx="0dp"
            app:sl_dy="0dp"
            app:sl_shadowColor="#20000000"
            app:sl_shadowRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/shape_default_white_without_stroke"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/PayWay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:text="支付方式"
                    android:textColor="@color/_212121"
                    android:textSize="17sp" />


                <RelativeLayout
                    android:id="@+id/weiPayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:drawableLeft="@mipmap/icon_wechat"
                        android:drawablePadding="@dimen/dp_15"
                        android:text="微信支付"
                        android:textColor="@color/_212121"
                        android:textSize="@dimen/sp_14" />

                    <CheckBox
                        android:id="@+id/weichatPay"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:button="@drawable/selector_pay_checkbox"
                        android:gravity="center" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/aPayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:drawableLeft="@mipmap/icon_apay"
                        android:drawablePadding="@dimen/dp_15"
                        android:text="支付宝支付"
                        android:textColor="@color/_212121"
                        android:textSize="@dimen/sp_14" />

                    <CheckBox
                        android:id="@+id/aliPay"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:button="@drawable/selector_pay_checkbox" />
                </RelativeLayout>
            </LinearLayout>
        </com.dd.ShadowLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:gravity="center"
                        android:text="待支付:"
                        android:textColor="@color/_212121"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/priceTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/text_buy_amount"
                        android:textColor="@color/deep_red"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/buy_now"
                    android:layout_width="118dp"
                    android:layout_height="31dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/shape_btn_buy_black">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@drawable/shape_btn_buy_black"
                        android:text="@string/go_pay"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15" />
                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>

</layout>