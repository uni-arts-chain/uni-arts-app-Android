<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.yunhualian.ui.activity.order.OrderDetailActivity">

        <include
            android:id="@+id/mAppBarLayout_av"
            layout="@layout/layout_generic_toolbar" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="交易成功"
            android:textColor="@color/_212121"
            android:textSize="21sp"
            android:textStyle="bold" />

        <com.dd.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            app:sl_cornerRadius="3dp"
            app:sl_dx="0dp"
            app:sl_dy="0dp"
            app:sl_shadowColor="#20000000"
            app:sl_shadowRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/shape_default_white_without_stroke"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_15">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/picture_layout"
                        android:layout_width="102dp"
                        android:layout_height="76dp"
                        app:cardCornerRadius="@dimen/dp_5">

                        <ImageView
                            android:id="@+id/hot_picture"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="name"
                            android:textColor="@color/_212121" />

                        <TextView
                            android:id="@+id/art_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="name"
                            android:textColor="@color/_212121" />

                        <TextView
                            android:id="@+id/addr"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="bottom"
                            android:singleLine="true"
                            android:text="name"
                            android:textColor="@color/_999999" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/prize"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="950"
                        android:textColor="@color/_212121"
                        android:textSize="@dimen/sp_15"
                        android:visibility="gone" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15">

                    <TextView
                        android:id="@+id/memoTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品数量 :"
                        android:textColor="@color/_212121"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/memo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25dp"
                        android:text="--"
                        android:textColor="@color/_212121"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15">

                    <TextView
                        android:id="@+id/artPrizeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品总价 :"
                        android:textColor="@color/_212121"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/artPrize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25dp"
                        android:text="--"
                        android:textColor="@color/picture_prize_color"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>
            </LinearLayout>

        </com.dd.ShadowLayout>

        <com.dd.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            app:sl_cornerRadius="3dp"
            app:sl_dx="0dp"
            app:sl_dy="0dp"
            app:sl_shadowColor="#20000000"
            app:sl_shadowRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/shape_default_white_without_stroke"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="订单信息"
                    android:textColor="@color/_212121"
                    android:textSize="@dimen/sp_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/orderInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="middle"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_15"
                        android:singleLine="true"
                        android:text="@string/order_info"
                        android:textColor="@color/_212121"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/copyAction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/orderInfo"
                        android:padding="@dimen/dp_15"
                        android:singleLine="true"
                        android:text="复制"
                        android:textColor="@color/picture_prize_color"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>


                <TextView
                    android:id="@+id/orderCreateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_create_time"
                    android:textColor="@color/_212121"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>
        </com.dd.ShadowLayout>
    </LinearLayout>
</layout>