                        android:padding="@dimen/dp_10"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/textNum1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/dp_15"
                        android:text="0/100"
                        android:textColor="@color/_909090" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/art_detail2"
                    android:layout_width="100dp"
                    android:layout_height="87dp"
                    android:background="@drawable/shape_upload_bg_gray"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableTop="@mipmap/icon_upload_img"
                        android:drawablePadding="12dp"
                        android:text="上传图片"
                        android:textColor="@color/_909090"
                        android:textSize="@dimen/sp_15" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toEndOf="@+id/art_detail2"
                    android:background="@drawable/shape_bg"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/desc2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请对细节进行剖析..."
                        android:padding="@dimen/dp_10"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/textNum2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/dp_15"
                        android:text="0/100"
                        android:textColor="@color/_909090" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:text="其他信息"
                android:textColor="@color/text_black_dark"
                android:textSize="@dimen/sp_15"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/themeSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/text_normal_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="@string/text_cut_theme" />

                <TextView
                    android:id="@+id/selectThemeTv"
                    style="@style/text_normal_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:drawableRight="@mipmap/icon_arrow_right"
                    android:drawablePadding="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="请选择"
                    android:textColor="@color/_999999" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/text_normal_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="@string/text_is_cut" />

                <com.suke.widget.SwitchButton
                    android:id="@+id/switch_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/amountSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    style="@style/text_normal_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="@string/text_cut_amount" />

                <TextView
                    android:id="@+id/selectCutAmount"
                    style="@style/text_normal_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:drawableRight="@mipmap/icon_arrow_right"
                    android:drawablePadding="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cut_amoutn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    style="@style/text_normal_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="@string/text_cut_price" />

                <TextView
                    android:id="@+id/cut_prize"
                    style="@style/text_normal_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="/份" />

                <EditText
                    android:id="@+id/cutPriceInput"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/cut_prize"
                    android:gravity="center"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/sp_16" />

                <TextView
                    style="@style/text_normal_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/cutPriceInput"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="￥" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/artPriceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/text_normal_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="@string/text_set_art_price" />

                <TextView
                    android:id="@+id/art_price"
                    style="@style/text_normal_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="" />

                <EditText
                    android:id="@+id/artPriceInput"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/art_price"
                    android:gravity="center"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/sp_16" />

                <TextView
                    style="@style/text_normal_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/artPriceInput"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="￥" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/royaltyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/text_normal_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="@string/text_set_rolaty_rate" />

                <TextView
                    android:id="@+id/art_royalty"
                    style="@style/text_normal_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="" />

                <EditText
                    android:id="@+id/artRoyaltyInput"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/rateSymple"
                    android:digits="1234567890"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="3"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/rateSymple"
                    style="@style/text_normal_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="%" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/timeSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/text_normal_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="@string/text_set_date" />

                <TextView
                    android:id="@+id/selectDateTv"
                    style="@style/text_normal_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:drawableRight="@mipmap/icon_arrow_right"
                    android:drawablePadding="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="请选择"
                    android:textColor="@color/_999999" />
            </RelativeLayout>

            <Button
                android:id="@+id/uploadAction"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="30dp"
                android:background="@color/_101010"
                android:text="确认上传"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</layout>