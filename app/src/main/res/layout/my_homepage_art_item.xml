<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/picture_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:elevation="@dimen/dp_2"
        app:cardCornerRadius="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/hot_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:id="@+id/textLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hot_picture"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/picture_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hot_picture"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/picture_prize"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:paddingBottom="@dimen/dp_10"
                    android:singleLine="true"
                    android:text="向日葵"
                    android:textColor="@color/picture_name_color"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/picture_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hot_picture"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:paddingBottom="@dimen/dp_10"
                    android:singleLine="true"
                    android:text="¥8000"
                    android:textColor="@color/picture_name_color"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_video_tag"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_above="@id/textLayout"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="13dp"
                android:background="@mipmap/icon_play" />

            <TextView
                android:id="@+id/live2d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textLayout"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="@color/_101010"
                android:drawablePadding="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="Live 2D"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textLayout"
                android:background="@color/gray_line" />


            <Button
                android:id="@+id/sellAction"
                android:layout_width="63dp"
                android:layout_height="25dp"
                android:layout_below="@+id/textLayout"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_margin="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/shape_bg_black"
                android:text="出售"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <Button
                android:id="@+id/transferAction"
                android:layout_width="63dp"
                android:layout_height="25dp"
                android:layout_below="@+id/textLayout"
                android:layout_margin="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_toLeftOf="@+id/sellAction"
                android:background="@drawable/shape_bg_black"
                android:text="转让"
                android:textColor="@color/black"
                android:textSize="11sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>