<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_hint_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="申请授权"
        android:textColor="@color/_101010"
        android:textSize="17sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/tv_hint_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_hint_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/tv_icon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hint_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/_101010"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_hint_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_icon_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="45dp"
        android:textColor="@color/_101010"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/rl_checkbox"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/tv_hint_content"
        android:layout_marginTop="45dp">

        <CheckBox
            android:id="@+id/ckbox_never_notice"
            style="@style/DappCheckBoxStyle"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ckbox_never_notice"
            android:text="下次不再提醒"
            android:textColor="@color/_999999" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_checkbox"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="22dp">

        <Button
            android:id="@+id/btn_refuse"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/shape_text_black_boder"
            android:text="拒绝"
            android:textColor="@color/_101010"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/dapp_shape_btn_bgcolor_black"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>