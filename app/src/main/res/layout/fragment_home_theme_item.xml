<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/dp_10">


    <androidx.cardview.widget.CardView
        android:id="@+id/picture_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

        <View
            android:id="@+id/zhe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:background="@color/_101010"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/seeMoreLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible">

            <ImageView
                android:id="@+id/seeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@mipmap/icon_more" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seeMore"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="查看更多"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/picture_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture_layout"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="start"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="@color/picture_name_color"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="@dimen/dp_15"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/picture_prize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture_layout"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="@color/picture_name_color"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>


</RelativeLayout>