<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15">

    <com.dd.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:sl_cornerRadius="3dp"
        app:sl_dx="0dp"
        app:sl_dy="0dp"
        app:sl_shadowColor="#20000000"
        app:sl_shadowRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                android:id="@+id/order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableLeft="@mipmap/icon_order"
                android:drawablePadding="@dimen/dp_10"
                android:text="@string/centify_time"
                android:textColor="@color/_101010"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_no"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/picture_layout"
                    android:layout_width="102dp"
                    android:layout_height="76dp"
                    app:cardCornerRadius="@dimen/dp_5">

                    <ImageView
                        android:id="@+id/hot_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="name"
                        android:textColor="@color/_212121"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/art_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="name"
                        android:textColor="@color/_212121"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/addr"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:text="@string/nft_address"
                        android:textColor="@color/_101010"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>


                <TextView
                    android:id="@+id/prize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:text="950"
                    android:textColor="@color/_212121"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="time"
                android:textColor="@color/_999999"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/order_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="time"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_toLeftOf="@+id/order_cost"
                android:text="实付款:"
                android:textColor="@color/_999999"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>
    </com.dd.ShadowLayout>
</RelativeLayout>